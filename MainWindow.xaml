<Window x:Class="laba_8_componovka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba_8_componovka"
        mc:Ignorable="d"
        Title="TASK 1" Height="600" Width="1000">
    <Grid>
        <DockPanel LastChildFill="True">

            <Button Cursor="Hand" DockPanel.Dock="Top" Content="1(Top)" Background="Red" Height="60" FontSize="25" Click="Button_Click"/>
            <Button Cursor="Hand" DockPanel.Dock="Left" Content="2(Left)" Background="Orange" Width="90" FontSize="25" Click="Button_Click"/>
            <Button Cursor="Hand" DockPanel.Dock="Right" Content="3(Right)" Background="Yellow" Width="90" FontSize="25" Click="Button_Click"/>
            <Button Cursor="Hand" DockPanel.Dock="Bottom" Content="4(Bottom)" Background="Green" Height="60" FontSize="25" Click="Button_Click"/>
            <Button Cursor="Hand" Content="5 (Fill)" Background="DeepSkyBlue" FontSize="25" Click="Button_Click"/>

        </DockPanel>
    </Grid>
</Window>
